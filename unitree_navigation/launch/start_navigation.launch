<launch>
    <!-- Run AMCL -->
    <include file="$(find unitree_navigation)/launch/start_localization.launch" >
        <arg name="rviz_config" default="navigation.rviz" />
    </include>
    <remap from="cmd_vel" to="/robot/unitree_base_control/cmd_vel" />

    <!-- Run contgroller -->
    <node pkg="unitree_controller" type="unitree_base_control" name="unitree_base_controller" />

    <!-- Run move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <!-- load move base nodee params -->
        <rosparam file="$(find unitree_navigation)/config/move_base_params.yaml" command="load" />
        <!-- load common params for costmaps -->
        <rosparam file="$(find unitree_navigation)/config/costmap_common_params.yaml"
            command="load" ns="global_costmap" />
        <rosparam file="$(find unitree_navigation)/config/costmap_common_params.yaml"
            command="load" ns="local_costmap" />
        <!-- load local costmap specific params -->
        <rosparam file="$(find unitree_navigation)/config/local_costmap_params.yaml" command="load" />
        <!-- load global costmap specific params -->
        <rosparam file="$(find unitree_navigation)/config/global_costmap_params_map.yaml"
            command="load" />
        <!-- load local planner params -->
        <rosparam file="$(find unitree_navigation)/config/teb_local_planner_omni_params.yaml"
            command="load" />
        <!-- load global planner params -->
        <rosparam file="$(find unitree_navigation)/config/global_planner_params.yaml"
            command="load" />

        <!-- select the planners to use -->
        <param name="base_global_planner" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
        <!-- <remap from="/rbkairos/move_base_simple/goal" to="/move_base_simple/goal" /> -->
    </node>

</launch>